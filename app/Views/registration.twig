<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>User Registration in Codeigniter</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-6">
                <h3>Sign Up</h3>
                <div class="d-flex justify-content-end">
                    <a href="{{ app.request.getBaseURL() }}/users-list" class="btn btn-success mb-2">Users</a>
                    <a href="{{ app.request.getBaseURL() }}/login" class="btn btn-success mb-2">Login</a>
                </div>
                
                {% if validation is defined %}
                    <div class="alert alert-info">
                        {{ validation.listErrors()|raw }}
                        {{ validation.listErrors()|striptags('<b>')|raw }}
                    </div>
                {% endif %}

                <form method="post">
                    <div class="mb-3">
                        <input type="text" name="name" placeholder="Name" value="" class="form-control" >
                        {% if validation.getError('name') is defined and validation.getError('name') != "" %}
                            <div class="alert alert-info">
                                {{ validation.getError('name')|raw }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        <input type="email" name="email" placeholder="Email" value="" class="form-control" >
                        {% if validation.getError('email') is defined and validation.getError('email') != "" %}
                            <div class="alert alert-info">
                                {{ validation.getError('email')|raw }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        <input type="password" name="password" placeholder="Password" class="form-control" >
                        {% if validation.getError('password') is defined and validation.getError('password') != "" %}
                            <div class="alert alert-info">
                                {{ validation.getError('password')|raw }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        <input type="password" name="confirmpassword" placeholder="Confirm Password" class="form-control" >
                        {% if validation.getError('confirmpassword') is defined and validation.getError('confirmpassword') != "" %}
                            <div class="alert alert-info">
                                {{ validation.getError('confirmpassword')|raw }}
                            </div>
                        {% endif %}
                    </div>

                    <button type="submit" class="btn btn-danger">Register</button>
                </form>
            </div>
        </div>
    </div>
</body>

</html>